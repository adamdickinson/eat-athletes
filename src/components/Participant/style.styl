.participant
  background #161B1D
  display inline-block
  font-size 13px
  font-weight 300
  margin 10px 0 0 10px
  overflow hidden
  text-align center
  width 120px

  &[disabled]
    filter grayscale(100%)
    opacity 0.3

  p
    margin 0.75em 1em
    line-height 1.3

.badge
  position absolute
  right 0
  bottom 0
  display block

.photo
  background #333
  background-size cover
  border 0 none
  height 120px
  position relative
  width 120px
