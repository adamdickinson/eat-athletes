.action-bar-button
  align-items center
  box-sizing border-box
  cursor pointer
  display flex
  flex-direction column
  font-size 10px
  font-weight bold
  justify-content center
  min-height 88px
  min-width 88px
  padding 8px 8px 12px
  text-align center
  border-right 1px solid #263238

  &[disabled]
    opacity 0.3
    cursor default 

  svg
    height 48px
    width 48px
    fill currentColor
