.profile, .placeholder
  padding 20px
  margin 20px
  background #161B1D
  text-align center
  font-weight 300


  h2
    font-size 24px
    font-weight 300
    margin 1.25rem auto 0.25rem


  h2:empty
    background rgba(#fff, 0.2)
    display block
    height 20px
    width 70%


  p
    margin 0
    line-height 1.3


  p:empty
    height 8px
    margin 1em auto
    background rgba(#fff, 0.15)
    width 80%


.photo
  background #333
  background-size cover
  border 0 none
  min-height 220px
