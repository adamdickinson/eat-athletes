.result
  align-items center 
  display flex
  flex-direction row 
  font-size 13px
  min-height 48px
  justify-content stretch 
  padding 0 30px 0 
  overflow hidden
  position relative
  box-sizing border-box

  &[disabled]
    opacity 0.5

  &:nth-child(odd)
    background #1F292E

  *
    vertical-align middle

  input
    background #000
    border none
    box-sizing border-box
    color #fff
    font-family "DJB Friday Night Lights", monospace
    font-size 20px
    height 48px
    margin 8px
    padding 15px 8px
    text-align center
    width 86px

.result-progress
  padding-bottom 6px

.result-left
  flex 1 0 auto
  display flex
  flex-direction row
  align-items center

.result-progress-bar
  background-image linear-gradient(to right, #4DD0E1, #00B0FF)
  height 6px
  left 0
  position absolute
  bottom 0
  z-index 1

.result-right
  float right
  font-weight bold
  flex 0 0 auto
  display flex
  flex-direction row
  align-items center
